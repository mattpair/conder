{
    "include": ["src/**/*", "index.ts"],
    "compilerOptions": {
        "module": "commonjs",
        "esModuleInterop": true,
        "target": "ES2019",
        "noImplicitAny": true,
        "moduleResolution": "node",
        "sourceMap": true,
        "baseUrl": ".",
        "typeRoots": [ "node_modules/@types/", "src/" ],
        "types": [
            "node",
            "jest"
        ],
        "composite": true,
        "outDir": "dist"
    }
}