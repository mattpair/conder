{
  "name": "conduit",
  "version": "0.0.1",
  "description": "Universal typing",
  "scripts": {
    "test:unit": "jest unit/",
    "pretest:integration": "npm run pkg:mac",
    "test:integration": "cd ../integration_test && ./test_all.sh",
    "compile": "tsc -b src/main/",
    "pkg:mac": "npm run compile && npx pkg dist/conduit.js --target macos && mv conduit bin/SNAPSHOT_CONDUIT_COMPILER",
    "setup:mac": "mkdir bin && PWD=$(pwd) && PATH=$PATH:$PWD/bin/"
  },
  "author": "Jeremy",
  "license": "ISC",
  "devDependencies": {
    "@types/jest": "^25.2.3",
    "@types/node": "^14.0.5",
    "@types/yauzl": "^2.9.1",
    "jest": "^25.5.4",
    "pkg": "^4.4.8",
    "prettier": "^2.0.5",
    "ts-jest": "^25.5.1",
    "typescript": "^3.9.3"
  },
  "dependencies": {
    "@google-cloud/container": "^2.1.0",
    "@kubernetes/client-node": "^0.12.0"
  },
  "jest": {
    "preset": "ts-jest",
    "testEnvironment": "node",
    "testMatch": [
      "**/test/**/*.[jt]s",
      "**/?(*.)+(spec|test).[tj]s"
    ]
  }
}
